{
  "info": {
    "name": "SPW391 Backend API",
    "description": "API Collection cho dự án SPW391 Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admission Methods",
      "description": "API liên quan đến phương thức xét tuyển",
      "item": [
        {
          "name": "Get All Admission Methods",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods?name=",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods"],
              "query": [
                {
                  "key": "name",
                  "value": "",
                  "description": "Lọc theo tên phương thức xét tuyển"
                }
              ]
            },
            "description": "Lấy danh sách tất cả phương thức xét tuyển với tùy chọn lọc theo tên"
          },
          "response": []
        },
        {
          "name": "Get Admission Method by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID của phương thức xét tuyển"
                }
              ]
            },
            "description": "Lấy thông tin chi tiết của một phương thức xét tuyển theo ID"
          },
          "response": []
        },
        {
          "name": "Get Admission Methods by Major Code",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/major/:majorCode",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", "major", ":majorCode"],
              "variable": [
                {
                  "key": "majorCode",
                  "value": "IT",
                  "description": "Mã ngành học"
                }
              ]
            },
            "description": "Lấy danh sách phương thức xét tuyển áp dụng cho một ngành học cụ thể"
          },
          "response": []
        },
        {
          "name": "Get Majors by Admission Method",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/:id/majors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", ":id", "majors"],
