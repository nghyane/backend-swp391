                {
                  "key": "id",
                  "value": "1",
                  "description": "ID của phương thức xét tuyển"
                }
              ]
            },
            "description": "Lấy danh sách ngành học áp dụng một phương thức xét tuyển cụ thể"
          },
          "response": []
        },
        {
          "name": "Create Admission Method",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Xét học bạ THPT\",\n  \"description\": \"Xét tuyển dựa trên kết quả học tập THPT\",\n  \"application_url\": \"https://example.com/hocba\"\n}"
            },
            "description": "Tạo một phương thức xét tuyển mới"
          },
          "response": []
        },
        {
          "name": "Associate Major with Admission Method",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/associate-major",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", "associate-major"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"majorId\": 1,\n  \"admissionMethodId\": 1,\n  \"academicYearId\": 1,\n  \"campusId\": 1,\n  \"minScore\": 24,\n  \"note\": \"Điểm tối thiểu 24/30\"\n}"
            },
            "description": "Liên kết một ngành học với một phương thức xét tuyển"
          },
          "response": []
        },
        {
          "name": "Create Global Admission Method Application",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/global-application",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", "global-application"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"admissionMethodId\": 1,\n  \"academicYearId\": 1,\n  \"campusId\": 1,\n  \"note\": \"Áp dụng cho tất cả ngành\"\n}"
            },
            "description": "Tạo áp dụng phương thức xét tuyển cho tất cả ngành"
          },
          "response": []
        },
        {
          "name": "Update Admission Method",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID của phương thức xét tuyển"
                }
              ]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Xét học bạ THPT (Cập nhật)\",\n  \"description\": \"Xét tuyển dựa trên kết quả học tập THPT - Phiên bản cập nhật\"\n}"
            },
            "description": "Cập nhật thông tin của một phương thức xét tuyển"
          },
          "response": []
        },
        {
          "name": "Delete Admission Method",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/admission-methods/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admission-methods", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "ID của phương thức xét tuyển"
                }
              ]
            },
            "description": "Xóa một phương thức xét tuyển"
          },
          "response": []
        }
      ]
    },
